@page
@model frontend.Pages.AddCocktailModel
@{
    ViewData["Title"] = "Add Cocktail Page";
}


<div class="text-center">
    <h1 class="display-4">Add Cocktail Page</h1>
    <h3>Add your cocktail below</a></h3>    
</div>

<br>


<form method="post" class="mt-3">
    @*Use hidden input elements to store employee id which
        we need when we submit the form*@ 
    <div class="form-group row">
        <label asp-for="cocktailToAdd.Id" class="col-sm-2 col-form-label">
        </label>
        <div class="col-sm-10">
            <input readonly asp-for="cocktailToAdd.Id" class="form-control" placeholder="An ID will be created for you">
        </div>
    </div>

    @*asp-for tag helper takes care of displaying the existing
        data in the respective input elements*@
    <div class="form-group row">
        <label asp-for="cocktailToAdd.Name" class="col-sm-2 col-form-label">
        </label>
        <div class="col-sm-10">
            <input asp-for="cocktailToAdd.Name" class="form-control" placeholder="Name">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="cocktailToAdd.Price" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="cocktailToAdd.Price" class="form-control" placeholder="Price">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="cocktailToAdd.Rating" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="cocktailToAdd.Rating" class="form-control" placeholder="Rating">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Add</button>
            <a asp-page="/Cocktails" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>


