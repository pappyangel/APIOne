{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "JFV SQL Store Service",
            "command": "dapr",
            "args": [
                "run",
                "--app-id",
                "JFV-SQLservice",
                "--components-path",
                "${workspaceFolder}/components/local",                
                "--dapr-grpc-port",
                "5401",
                "--dapr-http-port",
                "5480"
            ],
            "problemMatcher": []
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/cocktails/cocktails.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/cocktails/cocktails.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/cocktails/cocktails.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}